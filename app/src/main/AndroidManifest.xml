<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lijuan.myapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- 可修改图标 -->
    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SecondActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity2"
            android:label="@string/title_activity_login2" />
        <activity
            android:name=".NavActivity"
            android:label="@string/title_activity_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SubjectManage" />
        <activity android:name=".VoucherInput" />
        <activity android:name=".AccountProduce" />
        <activity android:name=".AccountQuery" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddSubject" />
        <activity
            android:name=".StaffNav"
            android:label="@string/title_activity_staff_nav"
            android:theme="@style/AppTheme" />
        <activity android:name=".AccountApplyStaff" />
        <activity android:name=".ProgressCheckStaff" />
        <activity android:name=".AccountQueryStaff"></activity>
    </application>

</manifest>